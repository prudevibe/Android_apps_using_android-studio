<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d7fffd"
    tools:context=".types_of_comm">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/comm_txt_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="120dp"
            android:text="Types Of"/>
        <TextView
            android:id="@+id/comm_txt_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:text="Communication"
            android:layout_below="@+id/comm_txt_01"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/comm_txt_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comm_txt_02"
            android:textSize="30dp"
            android:layout_marginLeft="125dp"
            android:text="Present"
            android:layout_marginTop="10dp"/>
        <ImageButton
            android:id="@+id/wifi_direct_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/comm_txt_03"
            android:background="@drawable/wifi_direct_png"/>
        <ImageButton
            android:id="@+id/bluetooth_icon"
            android:layout_below="@+id/comm_txt_03"
            android:layout_toRightOf="@+id/wifi_direct_icon"
            android:background="@drawable/bluet_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"/>

    </RelativeLayout>




</LinearLayout>