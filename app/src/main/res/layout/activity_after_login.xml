<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".after_login">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep calm"
            android:textStyle="bold|italic"
            android:textSize="40sp"
            android:layout_marginLeft="76dp"/>
        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="And select the"
            android:textStyle="bold|italic"
            android:textSize="40sp"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/textview"/>
        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview1"
            android:textStyle="bold|italic"
            android:text="situation"
            android:layout_marginLeft="86dp"
            android:textSize="40sp"/>
        <ImageButton
            android:background="@drawable/earthquake"
            android:id="@+id/earth_quake"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/textview2"/>
        <ImageButton
            android:id="@+id/drought"
            android:background="@drawable/drought"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/textview2"
            android:layout_toRightOf="@+id/earth_quake"/>
        <ImageButton
            android:id="@+id/flood"
            android:background="@drawable/flood"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/earth_quake"/>
        <ImageButton
            android:id="@+id/land_slide"
            android:background="@drawable/landslide"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/earth_quake"
            android:layout_toRightOf="@+id/flood"/>
        <ImageButton
            android:id="@+id/chat_bot"
            android:background="@drawable/chat_bot"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/flood"
            />
        <ImageButton
            android:id="@+id/communication_tab"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/commnication"
            android:layout_below="@+id/land_slide"
            android:layout_toRightOf="@+id/chat_bot"
            />


    </RelativeLayout>

</ScrollView>